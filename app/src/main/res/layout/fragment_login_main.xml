<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_icon_height"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:src="@drawable/login_icon"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="@dimen/button_login_layout_width"
            android:layout_height="@dimen/button_login_height"
            android:background="@drawable/button_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/button_login_marginTop"
            android:text="@string/title_login"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"

            android:visibility="visible"/>

        <Button
            android:id="@+id/button_register"
            android:layout_width="@dimen/button_login_layout_width"
            android:layout_height="@dimen/button_login_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/button_register_marginTop"
            android:background="@drawable/button_register"
            android:text="@string/title_register"
            android:textAlignment="center"
            android:textColor="@color/magenta"
            android:visibility="visible" />
    </LinearLayout>
    
</RelativeLayout>